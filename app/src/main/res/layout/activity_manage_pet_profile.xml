<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/doodlee"
    tools:context=".ManagePetProfile">

    <EditText
        android:id="@+id/petName"
        android:layout_width="299dp"
        android:layout_height="46dp"
        android:layout_marginTop="128dp"
        android:drawableLeft="@drawable/ic_baseline_person"
        android:layout_marginLeft="50dp"
        android:hint="   Enter Name"
        android:textColorHint="@color/black"
        />

    <EditText
        android:id="@+id/petAge"
        android:layout_width="299dp"
        android:layout_height="46dp"
        android:layout_marginLeft="50dp"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890_-!@#$%^*()"
        android:drawableLeft="@drawable/ic_baseline_age"

        android:textColorHint="@color/black"
        android:hint="   Enter Age"
        android:inputType="textPersonName"
       android:layout_below="@id/petName"/>

    <EditText
        android:id="@+id/petHeight"
        android:layout_width="299dp"
        android:layout_height="54dp"
        android:layout_marginLeft="50dp"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890_-!@#$%^*()"
        android:drawableLeft="@drawable/ic_baseline_library_books_24"

        android:hint="   Enter Height"
        android:textColorHint="@color/black"
      android:layout_below="@id/petAge"/>

    <EditText
        android:id="@+id/petWeight"
        android:layout_width="299dp"
        android:layout_height="54dp"
        android:layout_marginLeft="50dp"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890_-!@#$%^*()"
        android:drawableLeft="@drawable/ic_baseline_explicit_24"

        android:hint="   Enter Weight"

        android:textColorHint="@color/black"
        android:layout_below="@id/petHeight" />

    <EditText
        android:id="@+id/petBreed"
        android:layout_width="299dp"
        android:layout_height="54dp"
        android:layout_marginLeft="50dp"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890_-!@#$%^*()"
        android:drawableLeft="@drawable/ic_baseline_explicit_24"

        android:hint="   Enter Breed"

        android:textColorHint="@color/black"
        android:layout_below="@id/petWeight" />

    <Button
        android:id="@+id/addPet"
        android:layout_width="255dp"
        android:layout_height="64dp"
        android:layout_below="@id/petBreed"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="21dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:text="Add Pet"
        android:textAllCaps="false"
        android:textSize="24sp" />

    <Button
        android:id="@+id/readPet"
        android:layout_width="255dp"
        android:layout_height="64dp"
        android:layout_below="@id/addPet"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginLeft="50dp"
        android:text="Read Pet"
        android:textAllCaps="false"
        android:textSize="24sp" />

    <Button
        android:id="@+id/updatePet"
        android:layout_width="255dp"
        android:layout_height="64dp"
        android:layout_below="@id/readPet"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginLeft="50dp"
        android:text="Update Pet"
        android:textAllCaps="false"
        android:textSize="24sp" />

    <Button
        android:id="@+id/deletePet"
        android:layout_width="255dp"
        android:layout_height="64dp"
        android:layout_below="@id/updatePet"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginLeft="50dp"
        android:text="Delete Pet"
        android:textAllCaps="false"
        android:textSize="24sp" />



</RelativeLayout>