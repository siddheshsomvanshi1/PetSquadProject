<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="8dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="vertical">

        <!--text view for our course name-->
        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/textpetName"
            android:text="Pet Name"/>
        <TextView
            android:id="@+id/idTVpetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Pet Name"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <!--text view for our course tracks-->
            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/textpetAge"
                android:text="Pet Age"/>

            <TextView
                android:id="@+id/idTVpetAge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:text="Pet Age"
                android:textColor="@color/black" />

            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/textpetBreed"
                android:text="Pet Breed"/>

            <TextView
                android:id="@+id/idTVpetBreed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:text="Pet Breed"
                android:textColor="@color/black" />



        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>